//optimal solution in Java
public class Solution {

public static int[] alternateNumbers(int []a) {

// Write your code here.
int []ans=new int[a.length];
int pos=0,neg=1;
for(int i=0;i<ans.length;i++){

int item=a[i];
if(item>0){
ans[pos]=item;
pos+=2;
}
else {
ans[neg]=item;
neg+=2;
  }
}
return ans;}
}
